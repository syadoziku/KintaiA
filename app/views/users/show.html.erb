<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-info" %> 【<%= l(@first_day,  format: :middle) %>】時間管理表  <%= link_to "→", user_path(date:@first_day.next_month), class: "btn btn-info" %> </td>
      <td>指定勤務開始時間:<%= format_basic_info(@user.work_time) %>
      <br>指定勤務終了時間:
      </td>
      
      <td colspan="3">基本時間:<%= format_basic_info(@user.basic_time) %></td>
      <td>初日:<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属:<%= @user.department.present? ? @user.department : "未所属" %>
      <td>氏名:<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数:<%= @worked_sum %>日</td>
      <td>締め:<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="application-news">
  <%= link_to "[所属長承認申請のお知らせ]" %>
  <br><%= link_to "[勤務変更申請のお知らせ]"%>
  <br><%= link_to "[残業申請のお知らせ]"%>
</div>

<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
  <%= link_to "CSV出力", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
  <br><%= link_to "勤怠修正ログ(承認済)",attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
  
</div>


<div>
  <table class="table table-bordered table-condensed  table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="7">[実績]</th>
        <th colspan="7">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外時間</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認☑︎</th>
      </tr>
    
      
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
      　<th>分</th>
      </tr>
      
      
      
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請",attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 6 %>
              <font color="#0000ff"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% elsif day.worked_on.wday == 0 %>
              <font color="#ff0000"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% else %> 
              <%= $days_of_the_week[day.worked_on.wday] %>
            <% end %>
          </td>
          
          <!--出勤時間登録-->
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= day.started_at.min.floor_to(15) if day.started_at.present? %></td>
          <!--勤怠登録-->
          <td>
            <% if btn_text = attendance_state(day) %>
              <%=  link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <!--退勤時間登録-->
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= day.finished_at.min.floor_to(15) if day.finished_at.present? %></td>
          <td></td>
          <!--在社時間-->
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>       
            <% end %>
          </td>
          <td><%= day.note %></td>
          
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          
          
        </tr>
      <% end %>
    </tbody>
    
    <tfoor>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td colspan="8"></td>
        <td colspan="2"rowspan="2">所属長承認　未
          <br>
          <br><%= link_to "申請", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-info" %>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="8"></td>
      </tr>
      
    </tfoor>
    
    
  </table>
</div>